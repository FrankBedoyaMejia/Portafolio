---
import Layout from "../layouts/Layout.astro";

import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";

import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import BrieftCaseIcon from "../icons/BrieftCase.astro";
import SocialPill from "../icons/SocialPill.astro";
---

<Layout
  title="Porfolio de Frank - Desarrollador y Programador Web con 1 año de experiencia"
  description="Contrata a Frank para crear tu aplicacion web. Desarrollador Web. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full size-12 mb-4"
        src="/public/IMG-20230323-WA0002.webp"
        alt="Frank Foto"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Frank <a
          href="https://www.linkedin.com/in/frank-bedoya-mejia-105b67249/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>

      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+1 año de experiencia.</span>
        <span class="text-blue-300/80">Desarrollador Full Stack.</span>
        <span class="text-yellow-100/90">De Medellin, Colombia</span>
        <span class="opacity-75">Especializado en crear aplicaciones web</span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/frank-bedoya-mejia-105b67249/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/FrankBedoyaMejia">
          <GithubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:frankbedoyamejia03@gmail.com">
          <MailIcon class="size-4 md:size-6" /> frankbedoyamejia03@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <BrieftCaseIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos"> Proyectos </SectionContainer>
  </main>
</Layout>
